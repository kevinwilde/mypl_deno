{
  "deno.enable": true,
  // "deno.autoFmtOnSave": true,
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": false
  },
  "saveAndRun": {
    "commands": [
      {
        "match": ".ts",
        "cmd": "deno fmt",
        "silent": true
      }
    ]
  }
}
